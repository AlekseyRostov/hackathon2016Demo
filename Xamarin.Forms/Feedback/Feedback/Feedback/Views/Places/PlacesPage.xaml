<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Feedback.UI.Core.Converters;assembly=Feedback.UI.Core"
             x:Class="Feedback.UI.Core.Views.Places.PlacesPage">
  <ContentPage.Resources>
    <ResourceDictionary>
      <converters:ToStringConverter x:Key="ToStringConverter"/>
    </ResourceDictionary>
  </ContentPage.Resources>
  <ListView
    ItemsSource="{Binding Places}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <Label
            Text="{Binding BeaconUUID, Converter={StaticResource ToStringConverter}}"
            TextColor="Black"
            VerticalOptions="Center"/>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>